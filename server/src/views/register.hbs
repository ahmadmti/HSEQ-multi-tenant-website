{{> authNavBar}}
<style>
    @media screen and (max-width: 992px) {
        .card {
            width: 100% !important;
        }
    }
</style>
<div class="container">
    {{#if message}}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
    {{/if }}
    <div class="form__block">
        <div class="card" style="width:50%;">
            <div class="card-title">
                <h4 class="text-center">{{trans 'registerTitle.label'}}</h4>
            </div>
            <div class="card-body">
                {{#if errors }}
                {{#each errors }}
                <div class="alert alert-danger" role="alert">
                    {{ msg }}
                </div>
                {{/each }}
                {{/if }}
                <form method="post" action="register" id="register-form">

                    <div class="form__content">
                        <div class="form-group">
                            <label>{{trans 'firstName.label'}}</label>
                            <input class="form-control" required="" type="text" name="fname" />
                        </div>
                        <div class="form-group">
                            <label>{{trans 'lastName.label'}}</label>
                            <input class="form-control" required="" type="text" name="lname" />
                        </div>
                        <div class="form-group">
                            <label>{{trans 'email.label'}}</label>
                            <input class="form-control" required="" type="email" name="email" />
                        </div>
                        <div class="form-group">
                            <label>{{trans 'password.label'}}</label>
                            <input type="password" minlength="8" required="" class="form-control" name="password" />
                        </div>

                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="6LdlULcaAAAAAAzFxFVhnBr3X1Iu0jYQesVLmHiF">
                            </div><br>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">{{trans 'register.label'}}</button>
                    </div>
                    <div class="text-right">
                        <a href="/v1/login" class="btn btn-link">{{trans 'alreadyHaveAccountLoginNow.label' }} </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    function onSubmit(token) {
        document.getElementById("demo-form").submit();
    }
</script>